<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.Pages.MainPage"
             xmlns:vm="clr-namespace:CocktailApp.ViewModels"
             xmlns:m="clr-namespace:CocktailApp.Models"
             xmlns:c="clr-namespace:CocktailApp.Views.Components"
             x:DataType="vm:MainPageVM">


    <Grid RowDefinitions="*,*">
        <VerticalStackLayout Grid.Row="0" Spacing="25" Margin="30,30">

            <Label Text="Cocktail App"
                   Style="{StaticResource Headline}" />

            <Label Text="Benvenuto all'applicazione che ti guiderà nel creare cocktail sempre perfetti!"
                   Style="{StaticResource SubHeadline}"/>

            <Button  Command="{Binding SearchDrinkCommand}"
                    Text="Ricerca un cocktail da preparare" 
                    Padding="20,0"
                    HorizontalOptions="Center"  VerticalOptions="Center"/>

            <Label Text="oppure" Style="{StaticResource SubHeadline}"/>
            <Label Text="scopri un nuovo cocktail:" Style="{StaticResource SubHeadline}"/>

        </VerticalStackLayout>

        <c:CocktailWelcomeContent Grid.Row="1" Drinks="{Binding RandomDrinks}" IsVisible="{Binding DrinksAvailables}"/>

    </Grid>
</ContentPage>
